generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  email    String     @unique
  password String
  username String
  isAdmin  Boolean    @default(false)
  favorite Favorite[]
  rating   Rating[]
}

model Favorite {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  parking   Parking @relation(fields: [parkingId], references: [id])
  parkingId Int
}

model Rating {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  parking   Parking @relation(fields: [parkingId], references: [id])
  parkingId Int
}

model Parking {
  id       Int        @id @default(autoincrement())
  lat      Float
  lng      Float
  place    String
  favorite Favorite[]
  rating   Rating[]
}
